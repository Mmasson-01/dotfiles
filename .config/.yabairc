yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# global settings
yabai -m config mouse_follows_focus          true
yabai -m config focus_follows_mouse          autoraise
yabai -m config window_origin_display        default
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_shadow                on
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config window_border                off
yabai -m config window_border_width          6
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  15 
yabai -m config bottom_padding               15
yabai -m config left_padding                 15
yabai -m config right_padding                15
yabai -m config window_gap                   15
# yabai -m config external_bar                 all:0:36
#
# Define space to display
~/.config/yabai/setupSpaces.sh
WALLPAPER=~/Pictures/Wallpapers/wallpaper-log.png ~/.config/yabai/setupWallpaper.sh
# WALLPAPER=~/Pictures/Wallpapers/cyber_girl.jpg ~/.config/yabai/setupWallpaper.sh
# WALLPAPER=~/Pictures/Wallpapers/nr-b2.jpg ~/.config/yabai/setupWallpaper.sh

yabai -m space 1 --label web
yabai -m space 2 --label code
yabai -m space 3 --label business
yabai -m space 4 --label social
yabai -m space 5 --label doc
yabai -m space 6 --label chat
yabai -m space 7 --label monitoring

# window rules
yabai -m rule --add app="^Safari$"                              space=doc
yabai -m rule --add app="^Chrome$"                              space=web
yabai -m rule --add app="^Arc$"                                 space=web
yabai -m rule --add app="^Terminal$"                            space=doc sticky=on 
# yabai -m rule --add app="^kitty$"                             space=code
yabai -m rule --add app="^Microsoft Outlook$"                   space=business
yabai -m rule --add app="^Microsoft Teams$"                     space=chat
yabai -m rule --add app="^Microsoft Teams classic$"             space=chat
yabai -m rule --add app="^Microsoft Teams \(work or school\)$"  space=chat
yabai -m rule --add app="^Slack$"                               space=chat
yabai -m rule --add app="^Discord$"                             space=social

# apps to not manage (ignore)
yabai -m rule --add app="^System Settings$"         manage=off
yabai -m rule --add app="^Archive Utility$"         manage=off
yabai -m rule --add app="^balenaEtcher$"            manage=off
yabai -m rule --add app="^Creative Cloud$"          manage=off
yabai -m rule --add app="^Logi Options$"            manage=off
yabai -m rule --add app="^Alfred Preferences$"      manage=off
yabai -m rule --add app="^Calculator$"              manage=off
yabai -m rule --add app="^1Password$"               manage=off
yabai -m rule --add app="^OpenVPN Connect$"         manage=off
yabai -m rule --add app="^Web Inspector.*"          manage=off
# yabai -m rule --add app="^Finder$"                  sticky=on layer=above manage=off
yabai -m rule --add app="^Microsoft Outlook$"       title!="^(Calendar|Inbox)" manage=off
yabai -m rule --add app="^Microsoft Teams$"         manage=off
yabai -m rule --add app="^Discord$"                 manage=off
# yabai -m rule --add app="^Microsoft Teams classic$" manage=off
# yabai -m rule --add app="^Microsoft Teams \(work or school\)$" space=social manage=off
# yabai -m rule --add app="^Microsoft Teams$"         title="^Microsoft Teams Notification$" manage=off

# signals
yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

echo "yabai configuration loaded.."
